<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--    默认情况下，所有的bean在spring上下文初始化时完成注入  -->

    <bean class="com.zh.pojo.Girl" id="girl3" abstract="true" destroy-method="sleep" init-method="dress">
        <property name="name" value="韩雪"/>
    </bean>

    <bean id="hisGirl" class="com.zh.pojo.Girl" parent="girl3" name="g, g2 g3 g4" scope="singleton">
        <property name="age" value="33"/>
    </bean>
</beans>